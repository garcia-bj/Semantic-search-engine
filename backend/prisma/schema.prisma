generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Document {
  id          String    @id @default(uuid())
  filename    String
  filePath    String
  tripleCount Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt
  
  // Campos para ranking de popularidad
  accessCount Int       @default(0)
  lastAccess  DateTime?

  @@index([filename])
  @@index([createdAt])
  @@map("documents")
}

model Embedding {
  id        String   @id @default(uuid())
  text      String
  embedding Float[]
  model     String
  createdAt DateTime @default(now())

  @@unique([text, model])
  @@index([text])
  @@index([model])
}
